extends ../layout/layout.pug
include ../mixins/blogList.pug

block content
    .inform_wrapper
        h1.head_title 블로그
        div.button_wrapper
            a(href="/blog/upload").write_button 
                span.material-icons-outlined add_circle
    .list_wrapper
        ul.list_item
            each item in data 
                +blogBlock({
                    id:item.id,
                    title:item.title,
                    year:item.year,
                    month:item.month,
                    date:item.date
                })