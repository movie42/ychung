extends ../layout/layout.pug

block content 
    .contents_wrapper
        .contents_header_wrapper 
            .inform_wrapper
                h1.head_title 주보 수정
                if loggedIn && (user.authority === "master" || user.authority === "leader")
                    div.button_wrapper
                        a(href=`/worship/${id}/delete`).delete_btn
                            span.material-icons-outlined delete
                        button(type="button").send_btn
                            span.material-icons-outlined send
    .form_container.worship_form
        form(method="POST").form
            label(for="title") 제목
            input(type="text", name="title", required, id="title", placeholder="제목")
            select(type="text", name="word", required, id="word")       
                option(value="gen") 창세기
                option(value="exo") 출애굽기
