extends ../layout/layout.pug

block content 
    .inform_wrapper
        h1.head_title 공지사항 수정
        div.button_wrapper
            button(type="button").send_editor_btn
                span.material-icons-outlined send
    .form_container.editor_container
        form
            input(type="text" name="title" class="title" placeholder="제목을 입력하세요." value=data.title)
            div
                input(type='checkbox' id="isWeekly" name="isWeekly" value="isWeekly")
                label(for='isWeekly') 주보에 광고 넣기
    div#editor_update
    script(src="/static/js/editor.js")
        