extends ../layout/layout.pug
include ../mixins/noticeList.pug

block content
    .inform_wrapper
        h1.head_title 공지사항
        if loggedIn && (user.authority === 'master' || user.authority === 'administrator')
            .button_wrapper
                a(href="/notice/upload").write_button
                    span.material-icons-outlined add_circle
    .list_wrapper
        ul.list_item
            each item in data
                +noticeBlock({
                    id:item.id,
                    title:item.title,
                    year:item.year,
                    month:item.month,
                    date:item.date
                })

